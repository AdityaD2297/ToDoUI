# Production Frontend Environment Variables
# Copy this file to .env.production and update with your actual values

# API Configuration (Production) - LIVE BACKEND URL
VITE_API_BASE_URL=https://todoapi-tcbd.onrender.com
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME=ToDoUI
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern ToDo Management Application

# Feature Flags (Production)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_NOTIFICATIONS=true

# Authentication Configuration (Production)
VITE_JWT_REFRESH_THRESHOLD=300000
VITE_AUTO_LOGOUT_TIME=3600000

# UI Configuration (Production)
VITE_THEME=default
VITE_LANGUAGE=en
VITE_TIMEZONE=UTC

# Production Configuration
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# External Services (Production) - CHANGE THESE
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_SENTRY_DSN=YOUR_SENTRY_DSN

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Cache Configuration
VITE_CACHE_TTL=300000
VITE_ENABLE_OFFLINE=true

# Security Configuration
VITE_ENABLE_CSP=true
VITE_FORCE_HTTPS=true
